<Window x:Class="SpeedTester.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpeedTester"
        mc:Ignorable="d"
        Title="Speed Tester" Height="500" Width="800">
    <Grid>
        <StackPanel Orientation= "Vertical">
            <RichTextBox Name="testRichTextBox" FontSize="20" Margin="10" Background="Black"/>
            <TextBox Name="typeTextBox" TextChanged="type_TextChanged" FontSize="20" Margin="10"/>
            <Button Name="StartButton" Margin="50" Width="150" Click="StartButton_Click" FontSize="20">
                Start the Test!
            </Button>
            <Label Name="TimerLabel" FontSize="20">
                00:00:00
            </Label>
        </StackPanel>
    </Grid>
</Window>
